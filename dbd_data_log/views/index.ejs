<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- <link rel="stylesheet" href="/css/style.css"> -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <title>Document</title>
</head>
<body class="has-text-danger-dark has-background-grey-dark">
    <h1 class="is-size-1 is-uppercase has-text-centered has-background-grey-darker">Dead By Daylight</h1>
    <form action="/dbd/new">
        <input type="submit" value="Add New Characters">
    </form>
    <main class="section container columns">
        <div id="survivor" class="column">
            <h1 class="is-size-3 has-background-grey-darker has-text-centered">Survivors</h1>
            <ul>
                <div>
                    <% for (let i = 0; i < survivors.length; i++) {%>
                        <% console.log(survivors[i]) %>
                        <div>
                            <h1 class="is-size-5"><%=survivors[i].name%></h1>
                            <a href="/dbd/survivor/<%=survivors[i].id%>">
                                <img src="<%=survivors[i].img%>">
                            </a>
                        </div>
                        <div class="columns">
                            <form class="column" action="/dbd/survivor/<%=survivors[i].id%>/edit">
                                <input class="button" type="submit" value="Edit">
                            </form>
                            <form class="column" action="/dbd/survivor/<%=survivors[i].id%>?_method=DELETE" method="POST">
                                <input class="button" type="submit" value="DELETE">
                            </form>
                        </div>
                    <%}%>
                </div>
            </ul>
        </div>
        <div class="column">
            <h1 class="is-size-3 has-background-grey-darker has-text-centered">Killers</h1>
            <ul>
                <div>
                    <% for (let i = 0; i < killers.length; i++) {%>
                        <div>
                            <h1 class="is-size-5"><%=killers[i].name%></h1>
                            <a href="/dbd/killer/<%=killers[i]._id%>">
                                <img src="<%=killers[i].img%>">
                            </a>
                        </div>
                        <div class="columns">
                            <form class="column" action="/dbd/killer/<%=killers[i].id%>/edit">
                                <input class="button" type="submit" value="Edit">
                            </form>
                            <form class="column" action="/dbd/killer/<%=killers[i].id%>?_method=DELETE" method="POST">
                                <input class="button" type="submit" value="DELETE">
                            </form>
                        </div>
                    <%}%>
                </div>
            </ul>
        </div>
    </main>
</body>
</html>